<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentTwo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/create_new_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp"
        android:contentDescription="@string/you_create_a_notification"
        android:onClick="showNotification"
        android:src="@mipmap/create_new" />

    <TextView
        android:id="@+id/text_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp"
        android:text="@string/text_create_notification"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />

    <ImageView
        android:id="@+id/rectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="230dp"
        android:contentDescription=""
        android:src="@mipmap/rectangle"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/button_bg_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="230dp"
        android:contentDescription="@string/plus"
        android:onClick="plusFragment"
        android:src="@mipmap/button_bg" />

    <ImageView
        android:id="@+id/image_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="230dp"
        android:contentDescription="@string/plus"
        android:src="@mipmap/plus" />

    <ImageView
        android:id="@+id/button_bg_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="140dp"
        android:layout_marginTop="230dp"
        android:contentDescription="@string/minus"
        android:onClick="minusFragment"
        android:src="@mipmap/button_bg" />

    <ImageView
        android:id="@+id/image_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="140dp"
        android:layout_marginTop="230dp"
        android:contentDescription="@string/minus"
        android:src="@mipmap/minus" />

    <TextView
        android:id="@+id/numFragments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="230dp"
        android:text=""
        android:textColor="@color/colorPrimary" />

</FrameLayout>